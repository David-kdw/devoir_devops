version: '3'

services:
  github:
    image: 'alpine/git'
    environment:
      - GIT_REPO=https://github.com/David-kdw/Devops_project
    volumes:
      - './jenkins:/repo'
    command: 'clone $GIT_REPO /repo'
    
  jenkins:
    image: 'jenkins/jenkins:lts'
    ports:
      - '8080:8080'
      - '50000:50000'
    environment:
      - SONAR_HOST_URL=http://localhost:9000
      - SONAR_LOGIN=admin
      - GITHUB_REPO=https://github.com/David-kdw/Devops_project
      - GITHUB_TOKEN=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
    volumes:
      - './jenkins:/var/jenkins_home'
      - '/var/run/docker.sock:/var/run/docker.sock'
    depends_on:
      - github
      - sonarqube

  sonarqube:
    image: sonarqube:latest
    ports:
      - "9000:9000"
    environment:
      - SONARQUBE_JDBC_USERNAME=admin
      - SONARQUBE_JDBC_PASSWORD=admin
      - SONARQUBE_JDBC_URL=jdbc:postgresql://postgres:5432/sonar
    volumes:
      - sonarqube_data:/opt/sonarqube/data
      - sonarqube_extensions:/opt/sonarqube/extensions
      - sonarqube_logs:/opt/sonarqube/logs
      - sonarqube_temp:/opt/sonarqube/temp
    depends_on:
      - postgres

  postgres:
    image: postgres:latest
    environment:
      - POSTGRES_USER=admin
      - POSTGRES_PASSWORD=admin
      - POSTGRES_DB=sonar
    volumes:
      - postgres_data:/var/lib/postgresql/data

  redis:
    image: redis:latest
    ports:
      - '6379:6379'

  myapp:
    build: .
    depends_on:
      - redis

volumes:
  postgres_data:
  sonarqube_data:
  sonarqube_extensions:
  sonarqube_logs:
  sonarqube_temp:
